                    </ul>
                </div>
            </div>
        </nav>
        <h3>AGREGAR</h3>

        <EditForm Model="@_recoleccions" class="card card-body bg-light mt-5" OnValidSubmit="Post">
            <DataAnnotationsValidator />
            <div class="form-group row">
                <label class="col-md-2 col-form-label">NOMBRE DEL NEGOCIO </label>
                <InputText class="form-control" @bind-Value="_recoleccions.Nombre" />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">DIRECCION</label>
                <InputText class="form-control" @bind-Value="_recoleccions.Direccion" />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">CODIGO POSTAL </label>
                <InputText class="form-control" @bind-Value="_recoleccions.CodigoPostal" />
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">COLONIA </label>
                <InputText class="form-control" @bind-Value="_recoleccions.Colonia" />
            </div>


            <div class="form-group">
                <input type="submit" class="btn btn-success" value="AGREGAR" />
            </div>
        </EditForm>

        @code {

            private SitesRecycle _recoleccions = new();

            private async Task Post()
            {
                await Http.PostAsJsonAsync<SitesRecycle>("sitesRecycle", _recoleccions);
                Navigation.NavigateTo("/sitesRecycle");
            }

        }
        </body>